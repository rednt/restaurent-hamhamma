<Window x:Class="restaurent_hamhamma.Pages.EditMenuItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier l'élément de menu"
        Width="400" Height="300">
    <Grid>
        <TextBox x:Name="txtName" Text="{Binding Name}" Margin="10"/>
        <TextBox x:Name="txtDescription" Text="{Binding Description}" Margin="10,40,10,0"/>
        <TextBox x:Name="txtPrice" Text="{Binding Prix}" Margin="10,80,10,0"/>
        <CheckBox x:Name="chkDisponible" Content="Disponible" IsChecked="{Binding Disponible}" Margin="10,120,10,0"/>
        <Button Content="Enregistrer" Click="BtnSave_Click" Margin="10,160,10,0"/>
    </Grid>
</Window>
