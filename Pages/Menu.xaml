<Page x:Class="restaurent_hamhamma.Pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:restaurent_hamhamma.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" Background="#FF4D2D" Padding="20" Margin="0,0,0,42">
            <StackPanel>
                <Image Source="/Pages/logo_1.png" Height="66" Width="88" />
                <TextBlock Text="Bienvenue au Restaurant Hamhamma" 
                           FontSize="28" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Une expérience culinaire authentique" 
                           FontSize="18" Foreground="#FFDD99" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Contenu principal -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <StackPanel Margin="20">
                <WrapPanel Margin="20" HorizontalAlignment="Center">

                    <Border BorderBrush="#FF4D2D" BorderThickness="2" Margin="10" CornerRadius="8" Padding="10">
                        <StackPanel>
                            <Image Source="/Pages/images/4.jpg" Width="200" Height="150" Stretch="UniformToFill" />
                            <TextBlock Text="Couscous Royal" FontSize="20" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                            <TextBlock Text="couscous" 
                               FontSize="14" TextWrapping="Wrap" Margin="0,5,0,0" TextAlignment="Center"/>
                            <Button Content="Commander" Padding="15,5" Margin="0,0,10,0" />
                        </StackPanel>
                    </Border>


                    <Border BorderBrush="#FF4D2D" BorderThickness="2" Margin="10" CornerRadius="8" Padding="10">
                        <StackPanel>
                            <Image Source="/Pages/images/brik.jpg" Width="200" Height="150" Stretch="UniformToFill" />
                            <TextBlock Text="Brik" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" />
                            <TextBlock Text="brik" 
                               FontSize="14" TextWrapping="Wrap" Margin="0,5,0,0" TextAlignment="Center"/>
                            <Button Content="Commander" Padding="15,5" Margin="0,0,10,0" />
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="#FF4D2D" BorderThickness="2" Margin="10" CornerRadius="8" Padding="10">
                        <StackPanel>
                            <Image Source="/Pages/images/chakchouka.jpg" Width="200" Height="150" Stretch="UniformToFill" />
                            <TextBlock Text="Chakchouka" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" />
                            <TextBlock Text="Chakchouka" FontSize="14" TextWrapping="Wrap" Margin="0,5,0,0" TextAlignment="Center"/>
                            <Button Content="Commander" Padding="15,5" Margin="0,0,10,0" />
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="#FF4D2D" BorderThickness="2" Margin="10" CornerRadius="8" Padding="10">
                        <StackPanel>
                            <Image Source="/Pages/images/Fricassé.jpg" Width="200" Height="150" Stretch="UniformToFill" />
                            <TextBlock Text="Fricassé" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" />
                            <TextBlock Text="Fricassé" FontSize="14" TextWrapping="Wrap" Margin="0,5,0,0" TextAlignment="Center"/>
                            <Button Content="Commander" Padding="15,5" Margin="0,0,10,0" />
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>


        <!-- Pied de page -->
        <Border Grid.Row="2" Background="#FF4D2D" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Restaurant Hamhamma - 15 Rue de la Hmayem City - Tél:93 245 735" 
                           Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

    </Grid>
</Page>